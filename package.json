{
  "name": "dream-masonry",
  "version": "0.1.2",
  "description": "High-performance virtualized masonry grid layout for React. Pinterest-style layouts with infinite scroll, virtual rendering, and responsive columns. Faster than Masonic.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jsdom": "^27.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "masonry",
    "masonry-grid",
    "masonry-layout",
    "grid",
    "grid-layout",
    "pinterest",
    "pinterest-grid",
    "pinterest-layout",
    "waterfall",
    "waterfall-layout",
    "virtualized",
    "virtual-scroll",
    "virtual-list",
    "windowing",
    "react",
    "react-masonry",
    "react-grid",
    "react-virtualized",
    "infinite-scroll",
    "infinite-loading",
    "lazy-load",
    "responsive",
    "responsive-grid",
    "gallery",
    "image-gallery",
    "photo-gallery",
    "card-layout",
    "tiles",
    "mosaic",
    "columns",
    "flexbox-alternative",
    "css-grid-alternative",
    "masonic",
    "react-masonic",
    "layout"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/adioof/dream-masonry"
  }
}
